<div id="posts">
  <div class="post-form">
    <%= form_with(model: post) do |form| %>
      <% if post.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
        <div >
          <%= form.label :title, style: "display: block" %>
          <%= form.text_field :title, class: "post-field" %>
        </div>

        <div>
          <%= form.label :body, style: "display: block" %>
          <%= form.text_area :body, rows: 15, cols: 80, class: "post-field" %>
        </div>

        <div>
          <%= form.submit class: 'enter-btn' %>
        </div>
      </div>
    <% end %>
  </div> 
</div>